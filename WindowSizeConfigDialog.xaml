<Window x:Class="DAoC_Chat_Gator.WindowSizeConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window Size Configuration" Height="200" Width="300">
    <Grid>
        <Label Content="Width:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="WidthTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,10,0,0" Width="60"/>

        <Label Content="Height:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox x:Name="HeightTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,40,0,0" Width="60"/>

        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Click="SaveButton_Click"/>
    </Grid>
</Window>